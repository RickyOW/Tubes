<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAdminEditLayanan"
            android:layout_width="301dp"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_scis"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imgAdminEditLayanan"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAdminEditIdLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Salon" />

            <TextView
                android:id="@+id/txtAdminEditNamaLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtAdminEditStatusLayanan"

                android:text="Nama Layanan"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txtAdminEditDeskripsiLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi" />

            <TextView
                android:id="@+id/txtAdminEditHargaLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Harga"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="76dp" />

            <TextView
                android:id="@+id/txtAdminEditStatusLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Status"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="46dp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdminHapusLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hapus" />

        <Button
            android:id="@+id/btnAdminUpdateLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="105dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtAdminMessageEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="225dp"
        android:layout_marginStart="17dp"
        android:text="Status" />

</RelativeLayout>
